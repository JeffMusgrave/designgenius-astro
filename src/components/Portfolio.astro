---
import { Image } from 'astro:assets';

interface PortfolioItem {
  title: string;
  description: string;
  image: string;
}

interface Props {
  items: PortfolioItem[];
}

const { items } = Astro.props;
---

<section id="design" class="py-16 bg-prince-900">
  <div class="container mx-auto px-4 text-white">
    <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Design Portfolio</h2>
    {items.map((item, index) => (
      <div class={`flex flex-col md:flex-row items-center mb-16 ${index % 2 === 1 ? 'md:flex-row-reverse !bg-prince-900' : ''}`}>
        <div class="md:w-1/2 mb-8 md:mb-0">
          <Image
            src={item.image}
            alt={item.title}
            width={600}
            height={400}
            class="rounded-xl shadow-lg w-full h-auto"
          />
        </div>
        <div class="md:w-1/2 md:px-8">
          <h3 class="text-2xl font-bold mb-4">{item.title}</h3>
          <p class="text-lg">{item.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>