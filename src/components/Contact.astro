<section id="contact" class="bg-purple-900 text-white py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">Let's work together</h2>
    <div class="max-w-2xl mx-auto">
      <form class="space-y-6" action="#" method="POST">
        <div>
          <label for="name" class="block text-sm font-medium mb-2">Name</label>
          <input type="text" id="name" name="name" required class="w-full px-4 py-2 rounded-md text-gray-900 bg-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500" />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium mb-2">Email</label>
          <input type="email" id="email" name="email" required class="w-full px-4 py-2 rounded-md text-gray-900 bg-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500" />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium mb-2">Message</label>
          <textarea id="message" name="message" required class="w-full px-4 py-2 rounded-md text-gray-900 bg-gray-100 focus:outline-none focus:ring-2 focus:ring-purple-500" rows="4"></textarea>
        </div>
        <div>
          <button type="submit" class="w-full bg-yellow-400 text-purple-900 px-8 py-4 rounded-full text-xl font-bold hover:bg-yellow-300 transition-colors duration-300">Send Message</button>
        </div>
      </form>
    </div>
  </div>
</section>