---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="404 - Page Not Found" 
>
  <section class="py-20 text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-6xl mb-4">404</h1>
      <p class="text-2xl mb-8">Oops! The page you're looking for doesn't exist.</p>
      <a href="/" class="bg-punch-500 hover:bg-punch-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
        Go Back Home
      </a>
    </div>
  </section>
</Layout>