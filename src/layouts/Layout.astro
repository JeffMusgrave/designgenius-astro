---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#fe4056">
    <meta name="msapplication-TileColor" content="#fe4056">
    <meta name="theme-color" content="#fe4056">
    <meta name="generator" content={Astro.generator} />
    <slot name="SEO" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="flex flex-col min-h-screen bg-white dark:bg-gray-900 text-gray-900 dark:text-white">
    <Header />
      <main class="flex-1 flex flex-col">
        <slot />
      </main>
    <Footer />
  </body>
</html>